import java.util.*;
public class CamelCase{
    public static void main(String args[]){
        Scanner scan=new Scanner(System.in);
        String str=scan.next();
        int l=str.length();
        int count=1;
        for(int i=0;i<l;i++){
            if(Character.isUpperCase(str.charAt(i))){
                count++;
            }
        }
        System.out.println(count);
    }
}
